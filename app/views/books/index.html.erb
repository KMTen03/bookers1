<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th><h3>Title</h3></th>
        <th><h3>Body</h3></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <th><span><%= book.title %></span></th>
          <th><span><%= book.body %></span></th>
          <th><span><%= link_to "Show", book_path(book.id) %></span></th>
          <th><span><%= link_to "Edit", edit_book_path(book.id) %></span></th>
          <th><span><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Deleteï¼Ÿ" %></span></th>
        </tr>
     <% end %>
    </tbody>
  </table>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

    <%= form_with model: Book.new do |f| %>
      <h2>New book</h2>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Books' %>
    <% end %>
